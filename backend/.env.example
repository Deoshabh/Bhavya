# ===============================================
# BHAVYA EVENTS PLATFORM - BACKEND ENVIRONMENT TEMPLATE
# ===============================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env files to version control

# ===============================================
# CORE APPLICATION SETTINGS
# ===============================================
NODE_ENV=production
PORT=5002
FRONTEND_BUILD_PATH=/frontend/build

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# Primary MongoDB connection
DB_URI=mongodb://username:password@host:port/database?authSource=admin
MONGODB_URI=mongodb://username:password@host:port/database?authSource=admin

# Test database (optional)
MONGODB_URI_TEST=mongodb://username:password@host:port/database_test?authSource=admin

# ===============================================
# SECURITY & AUTHENTICATION
# ===============================================
# JWT Configuration - GENERATE A SECURE SECRET!
JWT_SECRET=your-very-long-and-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRES_IN=7
JWT_COOKIE_EXPIRE=7

# CORS Configuration - Update with your domain
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
# Gmail SMTP (Recommended)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Custom SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-smtp-password

# Email From Details
EMAIL_FROM_NAME=Your App Name
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
ADMIN_NOTIFICATION_EMAIL=admin@yourdomain.com

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_TEMPLATE_BOOKING_CONFIRMATION=d-template-id-1
SENDGRID_TEMPLATE_STATUS_UPDATE=d-template-id-2
SENDGRID_TEMPLATE_ADMIN_NOTIFICATION=d-template-id-3

# ===============================================
# PAYMENT GATEWAY CONFIGURATION
# ===============================================
# Razorpay
RAZORPAY_KEY_ID=rzp_test_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Stripe (Alternative)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable

# ===============================================
# CLOUD STORAGE CONFIGURATION
# ===============================================
# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===============================================
# REDIS CONFIGURATION (Optional)
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://localhost:6379

# ===============================================
# ADMIN CONFIGURATION
# ===============================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# ===============================================
# FRONTEND URLS
# ===============================================
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# ===============================================
# LOGGING & MONITORING
# ===============================================
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===============================================
# EXTERNAL SERVICES (Optional)
# ===============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMS_API_KEY=your-sms-api-key
ANALYTICS_API_KEY=your-analytics-api-key 