# API Configuration
# ===============================================
# BHAVYA EVENTS PLATFORM - PROJECT ENVIRONMENT TEMPLATE
# ===============================================
# Copy this file to .env and update with your values
# This file is used by Docker Compose and project-wide settings

# ===============================================
# PROJECT INFORMATION
# ===============================================
PROJECT_NAME=bhavya-events
PROJECT_VERSION=1.0.0

# ===============================================
# DOCKER COMPOSE CONFIGURATION
# ===============================================
COMPOSE_PROJECT_NAME=bhavya-events
APP_PORT=5002
DB_PORT=27017
REDIS_PORT=6379

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-secure-password
MONGO_INITDB_DATABASE=bhavya_Events

DATABASE_URL=mongodb://username:password@host:port/database?authSource=admin

# ===============================================
# REDIS CONFIGURATION
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ===============================================
# APPLICATION ENVIRONMENT
# ===============================================
NODE_ENV=production
JWT_SECRET=your-very-long-and-secure-jwt-secret
CORS_ORIGIN=https://yourdomain.com

# ===============================================
# EXTERNAL SERVICES
# ===============================================
EMAIL_SERVICE=gmail
EMAIL_FROM=noreply@yourdomain.com
CLOUDINARY_CLOUD_NAME=your-cloud-name

# ===============================================
# VOLUME MOUNTS
# ===============================================
UPLOADS_PATH=./data/uploads
LOGS_PATH=./data/logs
DB_DATA_PATH=./data/mongodb
REDIS_DATA_PATH=./data/redis

# ===============================================
# SECURITY & SSL
# ===============================================
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_REDIS=true
ENABLE_EMAIL_QUEUE=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false
REACT_APP_WS_URL=ws://localhost:5000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_EXHIBITOR_FEATURES=true

# External Services
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloud-name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Payment Gateway
REACT_APP_RAZORPAY_KEY_ID=your-razorpay-key-id

# Google Maps (if used)
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Environment
REACT_APP_ENV=development

# Social Media
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Note: All environment variables in Create React App must start with REACT_APP_
# The .env file should be added to .gitignore to avoid exposing sensitive information

# Server Configuration
PORT=5002
NODE_ENV=production
CORS_ORIGIN=https://yourdomain.com,http://localhost:3000,https://www.bhavya.org.in,https://bhavya.org.in

# Static Files Path
FRONTEND_BUILD_PATH=../frontend/build