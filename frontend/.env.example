# ===============================================
# BHAVYA EVENTS PLATFORM - FRONTEND ENVIRONMENT TEMPLATE
# ===============================================
# Copy this file to .env and update with your values
# Note: All React env vars must start with REACT_APP_

# ===============================================
# BUILD CONFIGURATION
# ===============================================
# Create React App build settings
CI=false
DANGEROUSLY_DISABLE_HOST_CHECK=true
DISABLE_ESLINT_PLUGIN=true
GENERATE_SOURCEMAP=false

# ===============================================
# API CONFIGURATION
# ===============================================
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_BASE_URL=https://yourdomain.com
REACT_APP_WS_URL=wss://yourdomain.com

# Development (uncomment for local development)
# REACT_APP_API_URL=http://localhost:5002/api
# REACT_APP_BASE_URL=http://localhost:5002
# REACT_APP_WS_URL=ws://localhost:5002

# ===============================================
# ENVIRONMENT SETTINGS
# ===============================================
REACT_APP_ENV=production
REACT_APP_VERSION=1.0.0

# ===============================================
# FEATURE FLAGS
# ===============================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_EXHIBITOR_FEATURES=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_PWA=true

# ===============================================
# PAYMENT GATEWAY
# ===============================================
REACT_APP_RAZORPAY_KEY_ID=rzp_test_your-razorpay-key-id
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ===============================================
# CLOUD STORAGE
# ===============================================
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloud-name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ===============================================
# EXTERNAL SERVICES
# ===============================================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX-X
REACT_APP_GTM_ID=GTM-XXXXXXX

# Social Media
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_TWITTER_HANDLE=@YourHandle
REACT_APP_INSTAGRAM_HANDLE=@yourhandle

# ===============================================
# SEO & METADATA
# ===============================================
REACT_APP_SITE_NAME=Your Event Platform
REACT_APP_SITE_DESCRIPTION=Your event platform description
REACT_APP_SITE_URL=https://yourdomain.com
REACT_APP_CONTACT_EMAIL=contact@yourdomain.com

# ===============================================
# UI CONFIGURATION
# ===============================================
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
REACT_APP_BRAND_LOGO=/assets/logo.png

# ===============================================
# PERFORMANCE
# ===============================================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_TIMEOUT=300000

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
REACT_APP_DEBUG_MODE=false
REACT_APP_USE_MOCK_DATA=false
